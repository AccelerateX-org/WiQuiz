@using WIQuest.Web.Data
@using WIQuest.Web.Models
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
@{
    var db = new UserDbContext();
}
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("zurück zur Startseite", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav"></ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>

<div class="container-fluid body-content">
    <div class="row">
        <div class="col-md-2">
            <div class="list-group">
                <a href="@Url.Action("Index", "Users")" class="list-group-item"><span class="badge">@db.Users.Count()</span>Benutzer</a>
            </div>
        </div>
        <div class="col-md-10">
            @RenderBody()
        </div>
    </div>
    <hr/>
    <footer>
        <p>&copy; @DateTime.Now.Year - Hochschule München</p>
    </footer>
</div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>