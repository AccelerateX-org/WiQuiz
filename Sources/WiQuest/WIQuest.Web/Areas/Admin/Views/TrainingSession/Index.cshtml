@model WIQuest.Web.Data.TrainingPlan


@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create", new { id = Model.Id })
</p>
<table class="table">
    <tr>
        <th>
            Name
        </th>
        <th>
            Beschreibung
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.Sessions) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            <a href="@Url.Action("Edit", new { id = item.Id })"><i class="fa fa-edit"></i></a>
            <a href="@Url.Action("Index", "TrainingExercise", new { id = item.Id })"><i class="fa fa-gears"></i></a>
            <a href="@Url.Action("Delete", new { id = item.Id })"><i class="fa fa-trash-o"></i></a>
        </td>
    </tr>
}

</table>
